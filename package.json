{
  "name": "qr-fox",
  "version": "1.0.0",
  "description": "Firefox WebExtension that displays a QR-code for the current page URL",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "node scripts/build.mjs",
    "build:scripts": "node scripts/build.mjs --scripts",
    "build:watch": "tsc --watch",
    "format": "prettier --write \"**/*.{ts,js,html,css,json}\"",
    "format:check": "prettier --check \"**/*.{ts,js,html,css,json}\"",
    "lint": "eslint \"**/*.{ts,js}\"",
    "test": "npm run build:scripts && jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "validate:i18n": "npm run build:scripts && node build/scripts/validate-i18n.js && node build/scripts/validate-locales-schema.js",
    "validate": "npm run format:check && npm run lint && npm run test && npm run validate:i18n",
    "pkg": "npm run validate && npm run build && web-ext build --overwrite-dest",
    "start": "npm run build && web-ext run"
  },
  "devDependencies": {
    "@types/chrome": "^0.1.36",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3",
    "web-ext": "^9.2.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "browserslist": {
    "firefox": ">=115"
  },
  "author": "Denis Zimin",
  "license": "MIT",
  "keywords": [
    "qr-code",
    "firefox",
    "webextension",
    "browser-extension"
  ]
}
