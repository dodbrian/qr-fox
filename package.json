{
  "name": "qr-fox",
  "version": "1.1.10",
  "description": "Firefox WebExtension that displays a QR-code for the current page URL",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "node scripts/build.mjs",
    "build:tests": "node scripts/build.mjs --tests",
    "sync-version": "node scripts/sync-version.mjs",
    "test": "npm run build:tests && jest",
    "format": "prettier --write \"**/*.{ts,js,html,css,json}\"",
    "format:check": "prettier --check \"**/*.{ts,js,html,css,json}\"",
    "lint": "eslint \"**/*.{ts,js}\"",
    "validate:i18n": "node --import ts-node/register scripts/validate-i18n.ts && node --import ts-node/register scripts/validate-locales-schema.ts",
    "validate": "npm run format:check && npm run lint && npm run validate:i18n",
    "pkg": "bash -c 'set -a && [ -f .env ] && source .env; npm run validate && npm run test && npm run build && web-ext build'",
    "start": "npm run build && web-ext run",
    "svg-to-png": "node --import ts-node/register scripts/svg-to-png.ts",
    "release": "release-it --ci --no-npm.publish \"$@\""
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^10.0.5",
    "@types/chrome": "^0.1.36",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^9.39.2",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jsqr": "^1.4.0",
    "prettier": "^3.8.1",
    "release-it": "^19.2.4",
    "sharp": "^0.34.5",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "web-ext": "^9.2.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "browserslist": {
    "firefox": ">=115"
  },
  "author": "Denis Zimin",
  "license": "MIT",
  "keywords": [
    "qr-code",
    "firefox",
    "webextension",
    "browser-extension"
  ]
}
