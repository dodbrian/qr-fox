{
  "name": "qr-fox",
  "version": "1.0.0",
  "description": "Firefox WebExtension that displays a QR-code for the current page URL",
  "type": "module",
  "private": true,
  "scripts": {
    "format": "prettier --write \"**/*.{js,html,css,json}\"",
    "format:check": "prettier --check \"**/*.{js,html,css,json}\"",
    "lint": "web-ext lint && eslint \"**/*.js\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "validate": "npm run format:check && npm run lint && npm run test",
    "build": "web-ext build --overwrite-dest",
    "start": "web-ext run"
  },
  "devDependencies": {
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "prettier": "^3.0.0",
    "web-ext": "^9.2.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "browserslist": {
    "firefox": ">=115"
  },
  "author": "Denis Zimin",
  "license": "MIT",
  "keywords": [
    "qr-code",
    "firefox",
    "webextension",
    "browser-extension"
  ]
}
